{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES6",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "../node_modules/three/examples/jsm/loaders/*"
            ],
            "app/*": [
                "src/*"
            ],
            "three": [
                "../node_modules/THREE/src/Three.d.ts"
            ],
            "GLTFLoader": [
                "../node_modules/three/examples/jsm/loaders/GLTFLoader.d.ts"
            ]
        }
    },
    "lib": [
        "es2016",
        "dom",
        "es5"
    ],
    "include": [
        "src/**/*"
    ]
}