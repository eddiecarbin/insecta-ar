{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution":"Node",
    "allowSyntheticDefaultImports":true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES5",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "THREE": [
        "node_modules/THREE/src/Three.d.ts"
      ],
      "GLTFLoader": [
        "node_modules/three/examples/jsm/loaders/*"
      ]
    }
  },
  "lib": [
    "es2016",
    "dom",
    "es5"
  ],
  "include": [
    "src/**/*"
  ]
}